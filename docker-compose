ersion: '3'
services:
  app:
    build:
      context: .
    ports:
      - "9000:9000"
  nginx:
    image: nginx:latest
    ports:
      - "80:80"
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf
    depends_on:
      - app
  mysql:
    image: mysql:latest
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: laravel
      MYSQL_USER: root
      MYSQL_PASSWORD: redhat123
    ports:
      - "3306:3306"
    volumes:
      - mysql_data:/var/lib/mysql

